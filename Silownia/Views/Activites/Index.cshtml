@model IEnumerable<Silownia.Models.Activites>

@{
    ViewBag.Title = "Index";
}

<h2>Wykaz aktualnie prowadzonyach zajęć</h2>

@if (Context.User.IsInRole("Coach"))
{
    @Html.ActionLink("Stwórz nowe zajęcie", "Create", "Activites", null, new { @class = "btn btn-success" })
}

<br />
<br />

<table class="table" border="solid 1 black">
    <tr>
        <th>
            Godzina
        </th>
        <th>
            Poniedziałek
        </th>
        <th>
            Wtorek
        </th>
        <th>
            Środa
        </th>
        <th>
            Czwartek
        </th>
        <th>
            Piątek
        </th>
        <th>
            Sobota
        </th>
        <th>
            Niedziela
        </th>
    </tr>

