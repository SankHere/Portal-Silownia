                @foreach (var item in Model)
                {
                    if (item.Day == Silownia.Models.Day.Poniedziałek && item.Godzina.Equals(a))
                    {
                        @Html.DisplayName("Nazwa: ")
                        @Html.DisplayFor(modelItem => item.Name) <br />
                        @Html.DisplayName("Liczba wolnych miejsc: ") 
                        @Html.DisplayFor(modelItem => item.NumberPlaces) <br />
                      
                        @Html.ActionLink("Szczegóły", "Details", "Activites", new { id = item.ID }, new { @class = "btn btn-info"})
