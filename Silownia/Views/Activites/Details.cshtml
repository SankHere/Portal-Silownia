@model Silownia.Models.Activites

@{
    ViewBag.Title = "Szczegóły";
    ViewBag.Comm = "Brak miejsca na te zajęcia, wybierz inne.";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Zajęcia</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TrainingRoom.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrainingRoom.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NumberPlaces)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumberPlaces)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Day)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Day)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Godzina)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Godzina):00
        </dd>

    </dl>
</div>

<p style="float:right">
    @if (Context.User.IsInRole("User"))
    {
        if (ViewBag.Slot >= 0) {
            if (ViewBag.IsSave == false) {
                @Html.ActionLink("Zapisz się", "SaveActivity", "Activites", new { id = Model.ID }, new { @class = "btn btn-success" })
            }
            else
            {
                @Html.ActionLink("Wypisz się", "UnSaveActivity", "Activites", new { id = Model.ID }, new { @class = "btn btn-danger" })
            }
        }
        else
        {
            @ViewBag.Comm
        }
    }

    <!--Html.ActionLink("Edit", "Edit", new { id = Model.ID }) !-->
    @Html.ActionLink("Wróć", "Index", "Activites", null, new { @class = "btn btn-info"})
</p>
